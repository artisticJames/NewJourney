class program

{
    public static void Main(string[] args)
    {
        double principal = 1000.0;
        double Rate = 5.0;
        int Time = 3;

        double Interest = (principal * Rate * Time) / 100;

        Console.WriteLine($"the simple interest for a principal of {principal} has rate of {Rate}%, and time of {Time} year is {Interest} ");
    }
}
